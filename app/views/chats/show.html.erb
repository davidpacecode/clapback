<h1>Chat <%= @chat.id %></h1>
<div id="messages">
  <% @chat.messages.each do |message| %>
    <div class="message message-<%= message.role %>">
      <strong><%= message.role.capitalize %>:</strong>
      <p><%= simple_format(message.content) %></p>
    </div>
  <% end %>
</div>

<%= form_with model: [@chat], local: false do |form| %>
  <div class="mb-4">
    <%= form.label :content, "Your Message", class: "block mb-2" %>
    <%= form.text_area :content, 
        placeholder: "Ask me anything...", 
        class: "wa-textarea", 
        rows: 4 %>
  </div>

  <%= form.submit "What next, mofo?", class: "wa-button wa-button--primary" %>
<% end %>  




<% if false %>
  <%= turbo_stream_from [@chat, "messages"] %>
  <h1>Chat <%= @chat.id %></h1>
  <div id="messages">
    <%= render @chat.messages %>
  </div>
  <!-- Your form to submit new messages -->
  <%= form_with(url: chat_messages_path(@chat), method: :post) do |f| %>
    <%= f.text_area :content %>
    <%= f.submit "Send" %>
  <% end %>
<% end %>
